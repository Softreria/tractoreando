# Variables de entorno para producción
NODE_ENV=production
PORT=8000

# Base de datos PostgreSQL - PRODUCCIÓN
# IMPORTANTE: Cambiar estos valores por los de tu servidor de producción
DB_NAME=tractoreando_prod
DB_USER=tractoreando_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_HOST=localhost
DB_PORT=5432
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Seguridad - CAMBIAR ESTOS VALORES EN PRODUCCIÓN
JWT_SECRET=CHANGE_THIS_JWT_SECRET_IN_PRODUCTION_MINIMUM_32_CHARS
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_IN_PRODUCTION_MINIMUM_32_CHARS
BCRYPT_ROUNDS=12

# URLs de producción
FRONTEND_URL=https://tractoreando.softreria.com
BACKEND_URL=https://tractoreando.softreria.com/api
CORS_ORIGIN=https://tractoreando.softreria.com

# Configuración de autenticación
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# Configuración de administrador por defecto
DEFAULT_ADMIN_EMAIL=admin@tractoreando.com
DEFAULT_ADMIN_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD
DEFAULT_COMPANY_NAME=Tractoreando Admin
DEFAULT_COMPANY_CIF=B12345678

# Configuración de logging
LOG_LEVEL=warn
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Configuración de correo electrónico
# Descomenta y configura cuando sea necesario
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=tu-email@gmail.com
# EMAIL_PASS=tu-password-de-aplicacion
# EMAIL_FROM=tu-email@gmail.com
# EMAIL_FROM_NAME=Tractoreando

# Configuración de archivos y uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=uploads

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de sesiones
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=strict
SESSION_MAX_AGE=86400000

# Configuración de HTTPS
HTTPS_REDIRECT=true
HSTS_MAX_AGE=31536000

# Configuración de monitoreo
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Configuración de backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30