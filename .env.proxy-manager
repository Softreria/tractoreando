# Variables de entorno para Tractoreando con Nginx Proxy Manager
# Este archivo debe ser usado cuando la aplicación está detrás de Nginx Proxy Manager

# Configuración del servidor
NODE_ENV=production
PORT=3002

# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/tractoreando

# Configuración de CORS - Permitir múltiples orígenes
# Nginx Proxy Manager manejará el dominio final
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Configuración de JWT
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui_cambiar_en_produccion
JWT_EXPIRES_IN=24h

# Configuración de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configuración específica para Proxy Manager
TRUST_PROXY=true
PROXY_HEADERS=true

# URLs base - serán sobrescritas por Nginx Proxy Manager
API_BASE_URL=/api
FRONTEND_URL=http://localhost:3001

# Configuración de seguridad
SECURE_COOKIES=false
SAME_SITE_COOKIES=lax

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de sesiones
SESSION_SECRET=tu_session_secret_muy_seguro_aqui_cambiar_en_produccion
SESSION_MAX_AGE=86400000

# Configuración de email (si se usa)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Configuración de backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30