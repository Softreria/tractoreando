# Variables de entorno para desarrollo - Frontend Tractoreando
# Este archivo configura la URL de la API para el entorno de desarrollo

# URLs de desarrollo
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_FRONTEND_URL=http://localhost:3000

# Optimizaciones de build para desarrollo
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=true
IMAGE_INLINE_SIZE_LIMIT=10000
ESLINT_NO_DEV_ERRORS=false
TSC_COMPILE_ON_ERROR=false
FAST_REFRESH=true

# Configuración de la aplicación
REACT_APP_ENV=development
REACT_APP_VERSION=$npm_package_version
REACT_APP_ENVIRONMENT=development

# Configuración de desarrollo
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_REPORTING=false
REACT_APP_CACHE_DURATION=0

# Configuración de seguridad para desarrollo
REACT_APP_ENABLE_DEVTOOLS=true
REACT_APP_DEBUG_MODE=true

# Configuración de archivos
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Configuración de UI
REACT_APP_THEME=light
REACT_APP_LANGUAGE=es
REACT_APP_TIMEZONE=Europe/Madrid

# Configuración de PWA para desarrollo
REACT_APP_ENABLE_PWA=false
REACT_APP_ENABLE_OFFLINE=false

# Configuración de hot reload
CHOKIDAR_USEPOLLING=false
WDS_SOCKET_HOST=localhost
WDS_SOCKET_PORT=3000