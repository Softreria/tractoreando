# Variables de entorno para producción - Frontend Tractoreando
# Este archivo configura la URL de la API para el entorno de producción

# URL base - Solo necesitas cambiar esta
REACT_APP_BASE_URL=https://tractoreando.softreria.com

# URLs generadas automáticamente (no modificar)
REACT_APP_API_URL=${REACT_APP_BASE_URL}/api
REACT_APP_FRONTEND_URL=${REACT_APP_BASE_URL}
REACT_APP_BACKEND_URL=${REACT_APP_BASE_URL}
REACT_APP_FILES_URL=${REACT_APP_BASE_URL}/uploads
REACT_APP_IMAGES_URL=${REACT_APP_BASE_URL}/images
REACT_APP_DOCUMENTS_URL=${REACT_APP_BASE_URL}/documents

# Optimizaciones de build
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=0
ESLINT_NO_DEV_ERRORS=true
TSC_COMPILE_ON_ERROR=true

# Configuración de la aplicación
REACT_APP_ENV=production
REACT_APP_VERSION=$npm_package_version
REACT_APP_ENVIRONMENT=production

# Optimizaciones de rendimiento
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_CACHE_DURATION=86400000

# Configuración de seguridad
REACT_APP_ENABLE_DEVTOOLS=false
REACT_APP_DEBUG_MODE=false

# Configuración de archivos
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Configuración de UI
REACT_APP_THEME=light
REACT_APP_LANGUAGE=es
REACT_APP_TIMEZONE=Europe/Madrid

# Configuración de PWA
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_OFFLINE=true